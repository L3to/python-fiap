import random
num = random.randint(1, 10)
contador = 0
contadornegativo = 0
contadorpositivo = 0

while contador < num:
    numero = random.randint(-10, 10)
    if numero < 0:
        contadornegativo += 1
    elif numero > 0:
        contadorpositivo += 1
    contador += 1

print(f'{contadornegativo} números negativos')
print(f'{contadorpositivo} números positivos')